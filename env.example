# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Models Configuration
VISION_MODEL=gpt-4o-mini
TEXT_MODEL=gpt-4-turbo-preview
ADVANCED_MODEL=gpt-5

# Google OAuth Configuration
# Получите эти значения в Google Cloud Console → APIs & Services → Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Callback URL для OAuth (важно для продакшена!)
# Для локальной разработки:
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
# Для продакшена на Render:
# GOOGLE_CALLBACK_URL=https://kbju-tracker.onrender.com/auth/google/callback

# Session Configuration
# Генерируйте случайную строку длиной минимум 32 символа!
SESSION_SECRET=your_very_long_random_session_secret_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Для локальной разработки:
CORS_ORIGIN=http://localhost:3000
# Для продакшена:
# CORS_ORIGIN=https://kbju-tracker.onrender.com

# Database Configuration (если понадобится в будущем)
# DATABASE_URL=your_database_url_here

# Redis Configuration (рекомендуется для продакшена)
# REDIS_URL=your_redis_url_here 